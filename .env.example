# Digital Sentinel — Environment Configuration
# Copy this file to .env and update values for your environment.

# ─── Application ─────────────────────────────────────────────────────────────
SENTINEL_APP_NAME="Digital Sentinel"
SENTINEL_APP_VERSION="2.0.0"
SENTINEL_ENVIRONMENT=development    # development | staging | production
SENTINEL_DEBUG=false
SENTINEL_LOG_LEVEL=INFO
SENTINEL_LOG_FORMAT=json            # json | console

# ─── API ─────────────────────────────────────────────────────────────────────
SENTINEL_API_PREFIX=/api
SENTINEL_ALLOWED_ORIGINS=http://localhost:3000
SENTINEL_RATE_LIMIT_DEFAULT=100/minute
SENTINEL_RATE_LIMIT_BURST=200/minute

# ─── PostgreSQL / TimescaleDB ────────────────────────────────────────────────
SENTINEL_DATABASE_URL=postgresql+asyncpg://sentinel:sentinel@postgres:5432/sentinel
SENTINEL_DATABASE_URL_SYNC=postgresql://sentinel:sentinel@postgres:5432/sentinel

# ─── Redis ───────────────────────────────────────────────────────────────────
SENTINEL_REDIS_URL=redis://redis:6379/0

# ─── Neo4j ───────────────────────────────────────────────────────────────────
SENTINEL_NEO4J_URI=bolt://neo4j:7687
SENTINEL_NEO4J_USER=neo4j
SENTINEL_NEO4J_PASSWORD=change-me-in-production

# ─── Wazuh SIEM ─────────────────────────────────────────────────────────────
SENTINEL_WAZUH_API_URL=https://wazuh-manager:55000
SENTINEL_WAZUH_API_USER=wazuh-api
SENTINEL_WAZUH_API_PASSWORD=change-me-in-production
SENTINEL_WAZUH_VERIFY_SSL=true

# ─── Security ────────────────────────────────────────────────────────────────
SENTINEL_SECRET_KEY=change-me-in-production-please
SENTINEL_ACCESS_TOKEN_EXPIRE_MINUTES=30

# ─── External Services ──────────────────────────────────────────────────────
SENTINEL_SHODAN_API_KEY=
SENTINEL_VIRUSTOTAL_API_KEY=
SENTINEL_OPENAI_API_KEY=
